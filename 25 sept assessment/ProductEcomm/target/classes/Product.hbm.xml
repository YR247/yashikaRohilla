<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "com.product.Product" table = "PRODUCT">
             
      <id name = "product_id" type = "int" column = "id">
         <generator class="native"/>
      </id>
      
      <property name = "product_id" column = "product_id" type = "int"/>
      <property name = "product_name" column = "product_name" type = "string"/>
      <property name = "product_price" column = "product_price" type = "int"/>
      
   </class>
</hibernate-mapping>